<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="8dp"
    card_view:cardCornerRadius="0dp"
    cardview:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/listImage"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#ffdde1e4"
            android:layout_marginRight="4dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eventTitle"
            android:id="@+id/title"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/listImage"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/relativeLayout"
            android:layout_toStartOf="@+id/relativeLayout" />

        <RelativeLayout
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="4dp"
            android:id="@+id/relativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公開日:"
                android:id="@+id/koukai_date"
                android:layout_gravity="left|top"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/updateDate"
                android:layout_toStartOf="@+id/updateDate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015/01/25"
                android:id="@+id/updateDate"
                android:layout_gravity="center_horizontal|top"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/limit"
                android:layout_alignEnd="@+id/limit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/limit"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/textView"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/limit"
                android:layout_toStartOf="@+id/limit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/accepted"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/textView"
                android:layout_toStartOf="@+id/textView" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ownerNickname"
            android:id="@+id/ownerNickname"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/listImage"
            android:layout_toEndOf="@+id/listImage"
            android:textSize="10sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>